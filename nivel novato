#include <stdio.h>

typedef struct {
    char estado[30];
    int codigo;
    char nome[30];
    int populacao;
    float area;
    float pib;
    int pontosTuristicos;
} CartaCidade;

   int main() {
    CartaCidade carta1 = {
        "Rio de Janeiro",      // Estado
        1,                    // C√≥digo
        "Rio de Janeiro",     // Nome
        6748000,               // Popula√ß√£o
        1182.3,               // √Årea (km¬≤)
        415.0,                // PIB (R$ bilh√µes)
        12                    // Pontos tur√≠sticos (exemplo)
    };

    CartaCidade carta2 = {
        "S√£o Paulo",
        2,
        "S√£o Paulo",
        12330000,
        1521.0,
        799.0,
        18
    };

    // Exibi√ß√£o das cartas
    printf("\n--- Carta 1 ---\n");
    printf("Estado: %s\n", carta1.estado);
    printf("C√≥digo: %d\n", carta1.codigo);
    printf("Cidade: %s\n", carta1.nome);
    printf("Popula√ß√£o: %d\n", carta1.populacao);
    printf("√Årea: %.2f km¬≤\n", carta1.area);
    printf("PIB: R$ %.2f bilh√µes\n", carta1.pib);
    printf("Pontos tur√≠sticos: %d\n", carta1.pontosTuristicos);

    printf("\n--- Carta 2 ---\n");
    printf("Estado: %s\n", carta2.estado);
    printf("C√≥digo: %d\n", carta2.codigo);
    printf("Cidade: %s\n", carta2.nome);
    printf("Popula√ß√£o: %d\n", carta2.populacao);
    printf("√Årea: %.2f km¬≤\n", carta2.area);
    printf("PIB: R$ %.2f bilh√µes\n", carta2.pib);
    printf("Pontos tur√≠sticos: %d\n", carta2.pontosTuristicos);

    // Escolha do atributo
    int opcao;
    printf("\nEscolha um atributo para comparar:\n");
    printf("1 - Popula√ß√£o\n");
    printf("2 - √Årea\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Tur√≠sticos\n");
    printf("5 - Densidade Populacional (menor vence)\n");
    printf("Op√ß√£o: ");
    scanf("%d", &opcao);

    printf("\nüîç Resultado da compara√ß√£o:\n");

    if (opcao == 1) {
        if (carta1.populacao > carta2.populacao) {
            printf("Carta 1 (%s) venceu!\n", carta1.nome);
        } else if (carta1.populacao < carta2.populacao) {
            printf("Carta 2 (%s) venceu!\n", carta2.nome);
        } else {
            printf("Empate!\n");
        }
    } else if (opcao == 2) {
        if (carta1.area > carta2.area) {
            printf("Carta 1 (%s) venceu!\n", carta1.nome);
        } else if (carta1.area < carta2.area) {
            printf("Carta 2 (%s) venceu!\n", carta2.nome);
        } else {
            printf("Empate!\n");
        }
    } else if (opcao == 3) {
        if (carta1.pib > carta2.pib) {
            printf("Carta 1 (%s) venceu!\n", carta1.nome);
        } else if (carta1.pib < carta2.pib) {
            printf("Carta 2 (%s) venceu!\n", carta2.nome);
        } else {
            printf("Empate!\n");
        }
    } else if (opcao == 4) {
        if (carta1.pontosTuristicos > carta2.pontosTuristicos) {
            printf("Carta 1 (%s) venceu!\n", carta1.nome);
        } else if (carta1.pontosTuristicos < carta2.pontosTuristicos) {
            printf("Carta 2 (%s) venceu!\n", carta2.nome);
        } else {
            printf("Empate!\n");
        }
    } else if (opcao == 5) {
        float dens1 = carta1.populacao / carta1.area;
        float dens2 = carta2.populacao / carta2.area;
        printf("Densidade da Carta 1: %.2f hab/km¬≤\n", dens1);
        printf("Densidade da Carta 2: %.2f hab/km¬≤\n", dens2);
        if (dens1 < dens2) {
            printf("Carta 1 (%s) venceu (menor densidade)!\n", carta1.nome);
        } else if (dens1 > dens2) {
            printf("Carta 2 (%s) venceu (menor densidade)!\n", carta2.nome);
        } else {
            printf("Empate!\n");
        }
    } else {
        printf("Op√ß√£o inv√°lida.\n");
    }

    return 0;
}
